<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>
    <link rel="stylesheet" href="/css/login.css">
</head>
<body>
  <main>
    <article>
      <form action="/login" method="POST">
        <h1 class="ubuntu text-center">Login</h1>
        <label for="email" class="ubuntu"><strong>Email Address</strong></label>
          <input type="text" name="email" id="email" class="input-email" value="admin@mail.com" required>

        <label for="password" class="ubuntu label"><strong>Password</strong></label>
          <input type="password" name="password" id="password" class="input-password" value="123456" required>

        <label for="showPassword" class="ubuntu label">Show password</label>
          <input type="checkbox" name="showPassword" id="showPassword" class="checkbox">

          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button type="submit" class="btn ubuntu">Login</button>
        <p class="text-center">Do you have an account yet? <a href="/signup">Signup</a></p>
        <p class="text-center"><a href="#forgotPassword">Forgot Password?</a></p>
      </form>
    </article>
  </main>
  <script>
    const password = document.getElementById('password'); 
    const showPassword = document.getElementById('showPassword');

    showPassword.addEventListener('click', (e) => {
      if(password.type === "password") {
        password.type = "text";
      }else{
        password.type = "password"
      }
    })
  </script>
</body>
</html>